{
  "name": "@ctrlup/oops",
  "version": "1.0.0",
  "module": "index.js",
  "repository": "git@github.com:ctrlup-io/oops.git",
  "author": "Valentin Barit <valentin.barit@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "eslint": "^8.12.0",
    "git-cz": "^4.8.0",
    "husky": "^7.0.4",
    "lint-staged": ">=10",
    "node-env-run": "^4.0.2",
    "prettier": "^2.6.1",
    "semantic-release": "^19.0.3"
  },
  "scripts": {
    "commit": "git-cz",
    "prepare": "husky install",
    "lint": "eslint --cache --fix .",
    "format": "prettier --write {*,.vscode/*}.{js,json}",
    "release:dry": "node-env-run --exec 'semantic-release --dry-run'"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always"
      ]
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "{*,.vscode/*}.{js,json}": "prettier --write"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            "index.js",
            "docs/CHANGELOG.md",
            "package.json"
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json"
          ]
        }
      ]
    ]
  },
  "files": [
    "index.js"
  ],
  "publishConfig": {
    "access": "public"
  }
}
